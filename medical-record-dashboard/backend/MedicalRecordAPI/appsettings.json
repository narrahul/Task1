{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [
    "http://localhost:3000",
    "https://localhost:3000"
  ],
  "ConnectionStrings": {
    "DefaultConnection": "Connection string is loaded from environment variables"
  },
  "FileUpload": {
    "MaxFileSizeInMB": 10,
    "AllowedExtensions": [ ".pdf", ".jpg", ".jpeg", ".png", ".gif", ".bmp" ],
    "UploadPath": "wwwroot/uploads"
  }
}